            <Label Content="PESEL:" HorizontalAlignment="Left" Height="26" Margin="125,205,0,0" VerticalAlignment="Top" Width="95" Foreground="White"/>
            <Label Content="Numer Telefonu:" HorizontalAlignment="Left" Height="26" Margin="125,236,0,0" VerticalAlignment="Top" Width="95" Foreground="White"/>
            <Label Content="E-mail:" HorizontalAlignment="Left" Height="26" Margin="125,262,0,0" VerticalAlignment="Top" Width="95" Foreground="White"/>
            <Label Content="Miasto:" HorizontalAlignment="Left" Height="26" Margin="125,293,0,0" VerticalAlignment="Top" Width="95" Foreground="White"/>
            <Label Content="Ulica:" HorizontalAlignment="Left" Height="26" Margin="125,319,0,0" VerticalAlignment="Top" Width="95" Foreground="White"/>
